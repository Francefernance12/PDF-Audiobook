# Splash screen
<SplashScreen>
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # Dark background (#1A1A1A)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        spacing: dp(30)
        padding: dp(50)
        size_hint: 1, 1
        # size: dp(812), dp(600)

        Label:
            text: "Welcome to PDF Audiobook"
            font_size: "36sp"
            font_name: "./app/Fonts/Roboto_SemiCondensed-Medium.ttf"
            color: 0.92, 0.92, 0.92, 1  # Light text (#EAEAEA)
            bold: True
            halign: 'center'
            valign: 'middle'

        Label:
            text: "Setting things upâ€¦"
            font_size: "16sp"
            font_name: "./app/Fonts/Roboto_SemiCondensed-Medium.ttf"
            color: 0.7, 0.7, 0.7, 1  # Light gray text (#B3B3B3)
            halign: 'center'
            valign: 'middle'


# The main window
<MainScreen>:

    canvas.before:
        Color:
            rgba: 0.09, 0.09, 0.09, 1  # Deep dark gray background (#181818)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        # Screen properties
        orientation: 'vertical'
        padding: dp(30)
        spacing: dp(40)
        size_hint: 1, 1

        # Title
        Label:
            text: 'PDF Audiobook'
            font_size: '32sp'
            font_name: "./app/Fonts/Roboto_SemiCondensed-Medium.ttf"
            size_hint_y: None
            height: dp(60)
            color: 0.92, 0.92, 0.92, 1  # Soft white text (#EAEAEA)
            bold: True

        # Content area
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.9
            halign: 'center'
            valign: 'start'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            padding: dp(20)

            canvas.before:
                Color:
                    rgba: 0.12, 0.12, 0.12, 1  # Dark gray (#1F1F1F)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15, 15, 15, 15]

            Image:
                source: './app/resources/images/modernBook.webp'
                size_hint: None, None
                size: dp(150), dp(150)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Label:
                text: root.file_select_state
                text_size: self.width - dp(40), None
                size_hint_y: None
                font_name: "./app/Fonts/Roboto_SemiCondensed-Medium.ttf"
                font_size: "18sp"
                height: self.texture_size[1]
                color: 0.92, 0.92, 0.92, 1  # Light text (#EAEAEA)
                padding: dp(20), dp(20)
                halign: 'center'
                valign: 'middle'
                pos_hint: {'center_x': 0.5}

            Label:
                text: root.file_path
                size_hint_y: None
                text_size: self.width, None
                font_name: "./app/Fonts/Roboto_SemiCondensed-Medium.ttf"
                font_size: "16sp"
                height: dp(40)
                halign: 'center'
                valign: 'middle'
                pos_hint: {'center_x': 0.5}
                color: 0.6, 0.6, 0.6, 1  # Soft gray text (#999999)

        # Buttons container
        BoxLayout:
            id: buttons_container
            orientation: 'horizontal'
            size_hint: None, None
            pos_hint: {'center_x': 0.93, 'center_y': 0.5}
            height: dp(50)
            width: self.parent.width 
            padding: dp(10)
            spacing: dp(40)  # Increased spacing between buttons


            # Choose file button
            Button:
                id: choose_file_button
                text: 'Select PDF File'
                size_hint: None, None
                size: dp(150), dp(40)
                background_color: 0, 0, 0, 0  
                background_normal: ''
                color: 0.92, 0.92, 0.92, 1
                padding: dp(24), dp(16)
                font_size: "18sp"
                font_name: "./app/Fonts/Roboto_SemiCondensed-Medium.ttf"
                on_press: root.open_file()

                canvas.before:
                    Color:
                        rgba: 28/255, 73/255, 131/255, 1 # Modern blue (#1C4983)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]

            # Dynamic Audiobook button
            BoxLayout:
                id: audiobook_button
                opacity: 0
                size_hint: None, None


# Displays PDF content
<TextScreen>:

    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # Dark background (#191919)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: dp(30)
        spacing: dp(40)
        size_hint: 1, 1


        # Title
        Label:
            text: 'Audio Player'
            font_size: '32sp'
            font_name: "./app/Fonts/Roboto_SemiCondensed-Medium.ttf"
            size_hint_y: None
            height: dp(60)
            color: 0.92, 0.92, 0.92, 1  # Soft white text (#EAEAEA)
            bold: True

        # Text content area
        ScrollView:
            orientation: 'vertical'
            size_hint: 0.9, 0.9
            halign: 'left'
            valign: 'top'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            padding: dp(20)
            
            # Scroll view properties
            do_scroll_x: False
            bar_width: dp(10)
            bar_color: 0.92, 0.92, 0.92, 1  # Light scrollbar (#EAEAEA)
            bar_inactive_color: 0.92, 0.92, 0.92, 1
            effect_cls: "ScrollEffect"
            
            canvas.before:
                Color:
                    rgba: 0.12, 0.12, 0.12, 1  # Dark gray (#1F1F1F)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15, 15, 15, 15]
            
            Label:
                text: "Select PDF in main screen" if not root.has_pdf else root.text
                text_size: self.width - dp(40), None
                size_hint_y: None
                font_name: "./app/Fonts/Roboto_SemiCondensed-Medium.ttf"
                font_size: "18sp"
                height: self.texture_size[1]
                color: 0.92, 0.92, 0.92, 1  # Light text (#EAEAEA)
                padding: dp(20), dp(20)
                halign: 'left'
                valign: 'middle'
                pos_hint: {'center_x': 0.5}

        # Button container
        #BoxLayout:
            #orientation: 'horizontal'
            #size_hint: 1, None
            #size: self.parent.width, dp(60)  # Container size
            #pos_hint: {'center_x': 0.68, 'center_y': 0.5}
            #padding: dp(10)

        # Button Container
        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            height: dp(50)
            width: self.parent.width 
            pos_hint: {'center_x': 0.73, 'center_y': 0.5}
            padding: dp(10)
            spacing: dp(40)

            # Play button
            Button:
                text: 'Play Audio'
                size_hint: None, None
                size: dp(120), dp(40)
                padding: dp(24), dp(16)
                background_color: 0, 0, 0, 0 
                background_normal: ''
                font_size: "18sp"
                font_name: "./app/Fonts/Roboto_SemiCondensed-Medium.ttf"
                color: 0.92, 0.92, 0.92, 1  # Soft white text (#EAEAEA)

                # States
                on_press: root.create_tts() if not root.check_audio_exists() else root.play_audio()
                disabled: root.play_button_disabled if not root.has_pdf else False
                opacity: 0.5 if self.disabled else 1

                canvas.before:
                    Color:
                        rgba: (30/255, 87/255, 33/255, 0.5) if self.disabled else (30/255, 87/255, 33/255, 1) # Dark green button (#1E5721)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]  

            # Stop button
            Button:
                text: 'Stop Audio'
                size_hint: None, None
                size: dp(120), dp(40)  # Reduced button width
                padding: dp(24), dp(16)  # Reduced padding

                background_color: 0, 0, 0, 0 
                background_normal: ''
                font_size: "18sp"
                font_name: "./app/Fonts/Roboto_SemiCondensed-Medium.ttf"
                size: dp(120), dp(40)  # Reduced button width
                color: 0.92, 0.92, 0.92, 1  # Soft white text (#EAEAEA)
                on_press: root.stop_audio()
                canvas.before:
                    Color:
                        rgba: 122/255, 29/255, 23/255, 1 # Modern red (#7B1D17)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]  

            # Back button
            Button:
                text: 'Back to Home'
                size_hint: None, None
                size: dp(160), dp(40)  # Slightly wider for text
                padding: dp(24), dp(16)  # Reduced padding

                background_color: 0, 0, 0, 0 
                background_normal: ''
                font_size: "18sp"
                font_name: "./app/Fonts/Roboto_SemiCondensed-Medium.ttf"
                size: dp(160), dp(40)  # Slightly wider for text
                color: 0.92, 0.92, 0.92, 1  # Soft white text (#EAEAEA)

                # States
                on_press: root.switch_to_main()

                canvas.before:
                    Color:
                        rgba: 122/255, 75/255, 23/255, 1 # Modern blue (#4A90E2)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]  


####### Popups
# The popup window/root
<FileSelectorPopup@Popup>:
    title: 'Choose a PDF to Convert'
    title_color: 0.92, 0.92, 0.92, 1  # Soft white text (#EAEAEA)
    title_size: '20sp'
    size_hint: 0.8, 0.8
    separator_color: 0.92, 0.92, 0.92, 1  # Soft white text (#EAEAEA)
    background_color: 0.15, 0.15, 0.15, 1  # Dark background
    overlay_color: 0, 0, 0, 0.7  # Semi-transparent dark overlay

    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)

        FileChooserListView:
            id: filechooser
            filters: ['*.pdf']
            
            # Basic properties
            dirselect: False
            font_name: './app/Fonts/Roboto_SemiCondensed-Medium.ttf'

        # Button Layouts
        BoxLayout:
            size_hint: None, None
            width: dp(350)  
            height: dp(50)
            spacing: dp(40)  
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}  

            Button:
                text: 'Cancel'
                background_color: 0, 0, 0, 0  
                background_normal: ''
                size_hint: None, None

                font_size: "18sp"
                font_name: './app/Fonts/Roboto_SemiCondensed-Medium.ttf'
                padding: dp(24), dp(16)
                color: 0.92, 0.92, 0.92, 1  # Soft white text (#EAEAEA)
                size: dp(150), dp(40)  
                on_press: root.dismiss()

                canvas.before:
                    Color:
                        rgba: 139/255, 46/255, 43/255, 1 # Modern red (#D9534F)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]


            Button:
                text: 'Convert'
                background_color: 0, 0, 0, 0 
                background_normal: ''
                size_hint: None, None

                font_size: "18sp"
                font_name: "./app/Fonts/Roboto_SemiCondensed-Medium.ttf"
                size: dp(150), dp(40)  
                color: 0.92, 0.92, 0.92, 1  # Soft white text (#EAEAEA)
                padding: dp(24), dp(16)

                # loads the object property
                on_press: 
                    root.load(filechooser.path, filechooser.selection) if root.load else None
                    root.dismiss()

                canvas.before:
                    Color:
                        rgba: 45/255, 93/255, 102/255, 1 # Modern blue (#4A90E2)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]


# Loading popup after creating audio
<loading_tts_popup@Popup>:
    title: 'Converting to Audio'
    title_color: 0.92, 0.92, 0.92, 1  # Soft white (#EAEAEA)
    title_size: '20sp'
    size_hint: 0.5, 0.3
    separator_color: 0.92, 0.92, 0.92, 1  # Soft white (#EAEAEA)
    background_color: 0.15, 0.15, 0.15, 1  # Dark background (#262626)
    overlay_color: 0, 0, 0, 0.7  # Semi-transparent dark overlay
    
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)
        size_hint_y: 1

        Label:
            text: 'Your audiobook is on its way...'
            color: 0.92, 0.92, 0.92, 1  # Soft white text (#EAEAEA)
            font_size: '16sp'
            font_name: "./app/Fonts/Roboto_SemiCondensed-Medium.ttf"
            text_size: self.width, None
            size_hint_y: 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            halign: 'center'
            valign: 'middle'
